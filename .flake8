[flake8]
# Maximum line length
max-line-length = 127

# Maximum McCabe complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    .venv,
    .idea,
    .streamlit,
    build,
    dist,
    *.egg-info,
    2025-2026,
    previous_seasons,
    scripts

# Ignore specific errors
ignore =
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # E501: line too long (handled by Black)
    E501,
    # W504: line break after binary operator
    W504

# Select specific error codes
select =
    # Pyflakes errors
    F,
    # Pycodestyle errors
    E,
    # Pycodestyle warnings
    W,
    # McCabe complexity
    C90

# Per-file ignores
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401,F403
    # Ignore line length in test files
    tests/*:E501
